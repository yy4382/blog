{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@comp/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@configs/*": ["src/configs/*"],
      "@layouts/*": ["src/layouts/*"],
      "@icons/*": ["src/components/icons/*"],
      "@styles/*": ["src/styles/*"],
      "@libs/*": ["src/libs/*"]
    },
    "types": ["unplugin-icons/types/vue"]
  },
  "exclude": ["dist"]
}
