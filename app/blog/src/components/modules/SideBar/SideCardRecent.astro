---
import SideCard from "./SideCard.astro";
import { getSortedPosts } from "@utils/content";
import { getPostPath } from "@utils/path";
import { tvButton } from "@styles/tv";
const allPosts = await getSortedPosts();
const recentPosts = allPosts.slice(0, 5);
---

<SideCard cardTitle="最近文章" cardLink="/achieve">
  <ul class="flex flex-col">
    {
      recentPosts.map((entry) => (
        <li class={tvButton({ class: "group px-1 py-1.5" })}>
          <a
            href={getPostPath(entry)}
            class="line-clamp-2 text-sm transition-transform select-none group-hover:translate-x-1"
          >
            {entry.data.title}
          </a>
        </li>
      ))
    }
  </ul>
</SideCard>
