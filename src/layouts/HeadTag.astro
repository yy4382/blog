---
import { ViewTransitions } from "astro:transitions";
import { SEO } from "astro-seo";
import "@styles/base.css";
import { type SEOProps } from "astro-seo";
import Favicon from "@comp/base/Favicon.astro";
import LoadingIndicator from "astro-loading-indicator/component";
interface Props {
  seoConfig: SEOProps;
  stopTrack?: boolean;
}
const { seoConfig, stopTrack } = Astro.props;
---

<html lang="zh-cn">
  <head>
    <meta charset="utf-8" />
    <Favicon />
    <link rel="sitemap" href="/sitemap-index.xml" />
    {
      import.meta.env.PROD && !import.meta.env.LIVE_PREVIEW && !stopTrack && (
        <>
          <script
            is:inline
            async
            src="https://analy.yfi.moe/script.js"
            data-website-id="3c89f8f6-9432-4ceb-a404-f22f2b0cf94d"
          />
          <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-1MPEY5XJ9V"></script>
          <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-1MPEY5XJ9V');
          </script>
        </>
      ) 
    }
    <SEO
      {...seoConfig}
      titleTemplate="%s - Yunfi's blog"
      titleDefault="Yunfi's Blog"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <LoadingIndicator color="hsl(236, 100%, 81%)" />
  </head>
  <slot />
</html>
