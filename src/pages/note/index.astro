---
import NoteList from "@comp/modules/Note/NoteList.astro";
import BaseLayout from "@layouts/BaseLayout.astro";

import { CompactEntryList } from "@comp/ui/CompactEntryList";
import { getSeo } from "@utils/SEO";

export const prerender = false;

const seo = getSeo({
  title: "Notes",
  description: "A collection of notes on various topics.",
  type: "website",
  noindex: true,
});
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=0, s-maxage=3600, stale-while-revalidate=3600",
);
---

<BaseLayout seoConfig={seo} navStats="碎碎念">
  <CompactEntryList keyword="碎碎念">
    <div class="mt-4 text-sm text-comment">
      <p>这里只会显示最近的 20 篇哦 😘</p>
      <p>
        但是，指向单个笔记的链接是永久的，所以你可以通过链接访问到任何一篇公开的笔记。
      </p>
    </div>
    <NoteList />
  </CompactEntryList>
</BaseLayout>
