---
import Card from "@comp/ui/Card/Card.astro";
import type { PageMeta } from "@libs/notion-client";
import NoteContent from "./NoteContent.astro";
interface Props {
  pageContent: { meta: PageMeta; html: string };
}
const { pageContent } = Astro.props;
---

<Card useHeading headSize="3xl" class:list={["space-y-4"]}>
  <h1 slot="heading">{pageContent.meta.title}</h1>
  <NoteContent html={pageContent.html} />
</Card>
